{
	"name": "@twin.org/standards-w3c-odrl",
	"version": "0.0.1-next.31",
	"description": "Models which define the structure of W3C ODRL Standard",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/twinfoundation/standards.git",
		"directory": "packages/standards-w3c-odrl"
	},
	"author": "cornel.filip@iota.org",
	"license": "Apache-2.0",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"clean": "rimraf dist coverage docs/reference",
		"build:schema": "ts-to-schema ./ts-to-schema.json ./src/schemas",
		"build:compile": "tsc",
		"build": "npm run build:schema && npm run build:compile",
		"build:watch": "tsc-watch --onSuccess \"npm run bundle:esm\"",
		"test": "vitest --run --config ./vitest.config.ts --no-cache",
		"coverage": "vitest --run --coverage --config ./vitest.config.ts --no-cache",
		"bundle:esm": "rollup --config rollup.config.mjs --environment MODULE:esm",
		"bundle:cjs": "rollup --config rollup.config.mjs --environment MODULE:cjs",
		"bundle": "npm run bundle:esm && npm run bundle:cjs",
		"docs:clean": "rimraf docs/reference",
		"docs:generate": "typedoc",
		"docs": "npm run docs:clean && npm run docs:generate",
		"dist": "npm run clean && npm run build && npm run test && npm run bundle && npm run docs",
		"dist:no-test": "npm run clean && npm run build && npm run bundle && npm run docs",
		"prepare": "ts-patch install -s"
	},
	"dependencies": {
		"@twin.org/data-json-ld": "next",
		"@twin.org/web": "next",
		"@twin.org/standards-w3c-vcard": "0.0.1-next.31",
		"@twin.org/standards-dublin-core": "0.0.1-next.31"
	},
	"devDependencies": {
		"@twin.org/nameof-transformer": "next",
		"@twin.org/nameof-vitest-plugin": "next",
		"@twin.org/ts-to-schema": "next",
		"@vitest/coverage-v8": "3.0.8",
		"copyfiles": "2.4.1",
		"rimraf": "6.0.1",
		"rollup": "4.34.9",
		"ts-patch": "3.3.0",
		"tsc-watch": "6.2.1",
		"typedoc": "0.27.9",
		"typedoc-plugin-markdown": "4.4.2",
		"typescript": "5.8.2",
		"vitest": "3.0.8"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.mjs",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"require": "./dist/cjs/index.cjs",
			"import": "./dist/esm/index.mjs"
		},
		"./locales/*.json": "./locales/*.json"
	},
	"files": [
		"dist/cjs",
		"dist/esm",
		"dist/types",
		"locales",
		"docs"
	]
}
