{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://schema.twindev.org/did/DidDocument",
	"description": "Interface describing a DID Document. Spec https://www.w3.org/TR/did-core/#did-document-properties.",
	"type": "object",
	"properties": {
		"@context": {
			"anyOf": [
				{
					"type": "string",
					"const": "https://www.w3.org/ns/did/v1"
				},
				{
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "https://schema.twindev.org/json-ld/JsonLdContextDefinitionElement"
					},
					"prefixItems": [
						{
							"type": "string",
							"const": "https://www.w3.org/ns/did/v1"
						}
					]
				}
			],
			"description": "The context for the document."
		},
		"id": {
			"type": "string",
			"description": "The id for the document."
		},
		"alsoKnownAs": {
			"anyOf": [
				{
					"type": "string"
				},
				{
					"type": "array",
					"items": false,
					"prefixItems": [
						{
							"type": "string"
						}
					]
				}
			],
			"description": "Aliases for the document."
		},
		"controller": {
			"anyOf": [
				{
					"type": "string"
				},
				{
					"type": "array",
					"items": false,
					"prefixItems": [
						{
							"type": "string"
						}
					]
				}
			],
			"description": "The controller for the document."
		},
		"verificationMethod": {
			"type": "array",
			"items": false,
			"description": "The verification methods.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"authentication": {
			"type": "array",
			"items": false,
			"description": "The authentication methods.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"assertionMethod": {
			"type": "array",
			"items": false,
			"description": "The assertion methods.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"keyAgreement": {
			"type": "array",
			"items": false,
			"description": "The key agreements.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"capabilityInvocation": {
			"type": "array",
			"items": false,
			"description": "The capability invocations.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"capabilityDelegation": {
			"type": "array",
			"items": false,
			"description": "The capability delegations.",
			"prefixItems": [
				{
					"anyOf": [
						{
							"type": "string"
						},
						{
							"$ref": "https://schema.twindev.org/did/DidDocumentVerificationMethod"
						}
					]
				}
			]
		},
		"service": {
			"type": "array",
			"items": false,
			"description": "The services.",
			"prefixItems": [
				{
					"$ref": "https://schema.twindev.org/did/DidService"
				}
			]
		}
	},
	"required": [
		"@context",
		"id"
	],
	"additionalProperties": false
}
